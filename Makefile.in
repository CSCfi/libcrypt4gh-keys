AR     = @AR@
RANLIB = @RANLIB@
CC     = @CC@
CFLAGS = @CFLAGS@ -fPIC -I@srcdir@ @CPPFLAGS@ @DEFS@
LIBS   = @LIBS@ -lopenbsd-compat -lopenssh
LDFLAGS = @LDFLAGS@ -L@srcdir@/openbsd-compat -L@srcdir@/openssh

prefix=@prefix@
exec_prefix=@exec_prefix@
LIBDIR = @libdir@

PKGCONFIGDIR = $(LIBDIR)/pkgconfig

ifdef DEBUG
CFLAGS += -DDEBUG=$(DEBUG) -g
endif

C4GH_LD_SONAME = #-Wl #,-soname,libc4gh-keys.so.2
C4GH_HEADERS = debug.h defines.h kdf.h key.h ssh.h c4gh.h
C4GH_SOURCES =                   kdf.c key.c ssh.c c4gh.c
C4GH_OBJECTS = $(C4GH_SOURCES:%.c=%.o)

LIBOPENSSH = openssh/libopenssh.a
LIBCOMPAT = openbsd-compat/libopenbsd-compat.a

all: 

.PHONY: all clean install
.SUFFIXES: .c .o

all: libc4gh-keys.so libc4gh-keys.la

$(LIBDIR):
	@echo "Creating lib dir: $(LIBDIR)"
	@install -d $(LIBDIR)

libc4gh-keys.so: $(C4GH_HEADERS) $(C4GH_OBJECTS) openssh/libopenssh.a openbsd-compat/libopenbsd-compat.a
	@echo "Linking objects into $@"
	$(CC) -shared $(C4GH_LD_SONAME) $(LDFLAGS) $(LIBS) $(C4GH_OBJECTS) -o $@

libc4gh-keys.la: $(C4GH_HEADERS) $(C4GH_OBJECTS)
	$(AR) rv $@ $(C4GH_OBJECTS) openssh/libopenssh.a openbsd-compat/libopenbsd-compat.a
	$(RANLIB) $@

openssh/libopenssh.a:
	make -C openssh
openbsd-compat/libopenbsd-compat.a:
	make -C openbsd-compat

%.o: %.c
ifdef DEBUG
	@echo "Compiling $< (debug: $(DEBUG))"
else
	@echo "Compiling $<"
endif
	@$(CC) $(CFLAGS) -c -o $@ $<

install-so: libc4gh-keys.so | $(LIBDIR)
	@echo "Installing $< into $(LIBDIR)"
	@install -m 755 $< $(LIBDIR)

install-la: libc4gh-keys.la | $(LIBDIR)
	@echo "Installing $< into $(LIBDIR)"
	@install -m 755 $< $(LIBDIR)

install-pc: libc4gh-keys.pc | $(PKGCONFIGDIR)
	@echo "Installing $< into $(PKGCONFIGDIR)"
	@install -m 644 $< $(PKGCONFIGDIR)

install: install-so install-la install-pc

clean:
	-rm -f libc4gh-keys.so libc4gh-keys.la $(C4GH_OBJECTS)
	-@rm -f *~ 

distclean: clean
	-rm -f Makefile config.h* config.status configure config.log
	-rm -rf autom4te.cache .depend.old libc4gh-keys.pc
	-make -C openssh $@
	-make -C openbsd-compat $@

###################################
## Dependencies
###################################
depend: depend-rebuild
	rm -f .depend.bak

depend-rebuild:
	mv .depend .depend.old
	rm -f config.h .depend
	touch config.h .depend
	makedepend -w1000 -Y. -f .depend *.c 2>/dev/null
	(echo '# Automatically generated by makedepend.'; \
	 echo '# Run "make depend" to rebuild.'; sort .depend ) >.depend.tmp
	mv .depend.tmp .depend
	rm -f .depend.bak
	mv .depend.old .depend.bak
	rm -f config.h

depend-check: depend-rebuild
	cmp .depend .depend.bak || (echo .depend stale && exit 1)

# @DEPEND@
